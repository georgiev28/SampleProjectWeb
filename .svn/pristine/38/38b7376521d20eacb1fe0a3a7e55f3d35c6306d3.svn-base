<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:p="http://primefaces.org/ui"> 

<h:head></h:head> 
<h:body> 
	
	<ui:composition template="/templates/common/commonLayout.xhtml">
		<ui:define name="menubar"> </ui:define>
		<ui:define name="content">
		
			<div align="center">
				<h1>Register Form</h1>
			</div>
			
		  
			<div align="center">
				<h:form>
				  <p:panel>
					<h:panelGrid columns="2" id="registerGrid" cellpadding="5" frame="box"
								 style="margin: 0 auto">
						<h:outputLabel for="firstName" value="First name: " />
						<p:inputText id="firstName" value="#{userMB.user.firstName}" />
						
						<h:outputLabel for="lastName" value="Last name: " />
						<p:inputText id="lastName" value="#{userMB.user.lastName}" />
						
						<h:outputLabel for="userName" value="UserName: *" />
						<p:inputText id="userName" value="#{userMB.user.userName}" />
						
						<h:outputLabel for="email" value="Email: " />
						<p:inputText id="email" value="#{userMB.user.email}" />
						
						<h:outputLabel for="password" value="Password: " />
						<p:password id="password" value="#{userMB.user.password}" />
					</h:panelGrid>
					
					<h:panelGrid columns="2">
						<h:commandButton type="submit"
									 	 action="#{userMB.registerUser()}" value="Register"
									 	 ajax ="false"
									 	 styleClass="login-button" />
						<h:commandButton type="submit"
									 	 action="/login.xhtml?faces-redirect=true" immediate="true" value="Cancel"
									 	 styleClass="login-button" />			 	 
					</h:panelGrid>
				  </p:panel>
				</h:form>
			</div>
			
		</ui:define>
	</ui:composition>
</h:body> 
</html>
